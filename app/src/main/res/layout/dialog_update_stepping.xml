<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.fidilaundry.app.basearch.viewmodel.SteppingViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_14sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.fidilaundry.app.util.FontTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="Update Step Pengerjaan"
                android:textColor="@color/blackHistory"
                android:textSize="@dimen/_13sdp"
                app:fontName="@string/font_name_dmsans"
                app:textStyle="@integer/font_style_semibold" />

            <RelativeLayout
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_input_text">

            <com.fidilaundry.app.util.FontEditText
                android:id="@+id/etStepping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:background="@null"
                android:hint="Cuci / Lipat / Setrika / Selesai"
                android:inputType="text"
                android:maxLines="1"
                android:text="@={vm.stepping}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/font_name_dmsans" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.fidilaundry.app.util.FontButton
                android:id="@+id/btnUpdate"
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:layout_weight="0.475"
                android:background="@drawable/rounded_button"
                android:clipChildren="false"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:fontName="@string/font_name_dmsans"
                app:textStyle="@integer/font_style_bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>

            <com.fidilaundry.app.util.FontButton
                android:id="@+id/btnDone"
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:layout_weight="0.475"
                android:background="@drawable/bordered_green"
                android:clipChildren="false"
                android:text="Selesai"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp"
                app:fontName="@string/font_name_dmsans"
                app:textStyle="@integer/font_style_bold" />
        </LinearLayout>


    </LinearLayout>

</layout>