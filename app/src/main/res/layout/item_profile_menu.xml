<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/llItem"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginTop="@dimen/_12sdp"    android:orientation="horizontal">    <ImageView        android:id="@+id/ivIcon"        android:layout_width="@dimen/_20sdp"        android:layout_height="@dimen/_20sdp"        android:layout_gravity="center"        android:scaleType="centerCrop"        android:src="@drawable/rounded_light_small" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_marginLeft="@dimen/_12sdp"        android:orientation="vertical">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <com.fidilaundry.app.util.FontTextView                android:id="@+id/tvTitle"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:text="Menu"                android:textColor="@color/black"                android:textSize="@dimen/_12sdp"                app:fontName="@string/font_name_dmsans"                app:textStyle="@integer/font_style_semibold" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:orientation="horizontal">                <com.fidilaundry.app.util.FontTextView                    android:id="@+id/tvVersion"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:layout_marginRight="@dimen/_10sdp"                    android:layout_toLeftOf="@+id/ivArrow"                    android:text=""                    android:textColor="@color/gray_dark"                    android:textSize="@dimen/_10sdp"                    android:visibility="gone"                    app:fontName="@string/font_name_dmsans"                    app:textStyle="@integer/font_style_semibold" />                <ImageView                    android:id="@+id/ivArrow"                    android:layout_width="@dimen/_4sdp"                    android:layout_height="@dimen/_8sdp"                    android:layout_gravity="center"                    android:layout_marginEnd="@dimen/_4sdp"                    android:background="@drawable/arrow"                    android:backgroundTint="@color/colorPrimaryDark" />            </LinearLayout>        </RelativeLayout>        <View            android:id="@+id/line"            android:layout_width="match_parent"            android:layout_height="0.5dp"            android:layout_marginTop="@dimen/_6sdp"            android:background="@color/gray_dark"            android:visibility="gone" />    </LinearLayout></LinearLayout>