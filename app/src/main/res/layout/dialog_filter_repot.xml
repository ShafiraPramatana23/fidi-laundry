<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.fidilaundry.app.basearch.viewmodel.HistoryViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_14sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.fidilaundry.app.util.FontTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="Filter"
                android:textColor="@color/blackHistory"
                android:textSize="@dimen/_13sdp"
                app:fontName="@string/font_name_dmsans"
                app:textStyle="@integer/font_style_semibold" />

            <RelativeLayout
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>
        </RelativeLayout>

        <com.fidilaundry.app.util.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:includeFontPadding="false"
            android:text="Jenis Laporan"
            android:textColor="@color/blackHistory"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/font_name_dmsans"
            app:textStyle="@integer/font_style_semibold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_input_text">

            <com.fidilaundry.app.util.FontEditText
                android:id="@+id/etType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:background="@null"
                android:hint="Pilih salah satu"
                android:inputType="text"
                android:maxLines="1"
                android:text="@={vm.typeFilter}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/font_name_dmsans" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_down_arrow"/>

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fidilaundry.app.util.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:text="Tahun"
                android:textColor="@color/blackHistory"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/font_name_dmsans"
                app:textStyle="@integer/font_style_semibold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_input_text">

                <com.fidilaundry.app.util.FontEditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:background="@null"
                    android:hint="Pilih salah satu"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="@={vm.year}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    app:fontName="@string/font_name_dmsans" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_down_arrow"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.475"
                android:orientation="vertical">

                <com.fidilaundry.app.util.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Tanggal Mulai"
                    android:textColor="@color/blackHistory"
                    android:textSize="@dimen/_10sdp"
                    app:fontName="@string/font_name_dmsans"
                    app:textStyle="@integer/font_style_semibold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_input_text">

                    <com.fidilaundry.app.util.FontEditText
                        android:id="@+id/etStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:paddingVertical="@dimen/_12sdp"
                        android:background="@null"
                        android:hint="Pilih salah satu"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={vm.startDate}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:fontName="@string/font_name_dmsans" />

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_down_arrow"/>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.475"
                android:orientation="vertical">

                <com.fidilaundry.app.util.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Tanggal Selesai"
                    android:textColor="@color/blackHistory"
                    android:textSize="@dimen/_10sdp"
                    app:fontName="@string/font_name_dmsans"
                    app:textStyle="@integer/font_style_semibold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_input_text">

                    <com.fidilaundry.app.util.FontEditText
                        android:id="@+id/etEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:paddingVertical="@dimen/_12sdp"
                        android:background="@null"
                        android:hint="Pilih salah satu"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={vm.endDate}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:fontName="@string/font_name_dmsans" />

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_down_arrow"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fidilaundry.app.util.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:text="Status"
                android:textColor="@color/blackHistory"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/font_name_dmsans"
                app:textStyle="@integer/font_style_semibold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_input_text">

                <com.fidilaundry.app.util.FontEditText
                    android:id="@+id/etStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:background="@null"
                    android:hint="Pilih salah satu"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="@={vm.statusTitle}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    app:fontName="@string/font_name_dmsans" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_down_arrow"/>

            </RelativeLayout>

        </LinearLayout>

        <com.fidilaundry.app.util.FontButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_button"
            android:clipChildren="false"
            android:text="Terapkan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:fontName="@string/font_name_dmsans"
            app:textStyle="@integer/font_style_bold" />
    </LinearLayout>

</layout>